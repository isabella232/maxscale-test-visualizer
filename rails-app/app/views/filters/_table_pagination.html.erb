<!-- Table pagination elements -->
<nav aria-label="Table navigation">
  <ul class="pagination">
    <li class="page-item">
      <a aria-label="Previous" class="page-link" id="firstTablePageButton">
        <span aria-hidden="true">
          <%= ion_icon('ios-skipbackward') %>
        </span>
        <span class="sr-only">First</span>
      </a>
    </li>
    <li class="page-item">
      <a aria-label="Previous" class="page-link" id="previousTablePageButton">
        <span aria-hidden="true">
          <%= ion_icon('arrow-left-b') %>
        </span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    <li class="page-item">
      <a class="page-link" id="currentPageLabel">-1</a>
    </li>
    <li class="page-item">
      <a aria-label="Next" class="page-link" id="nextTablePageButton">
        <span aria-hidden="true">
          <%= ion_icon('arrow-right-b') %>
        </span>
        <span class="sr-only">Next</span>
      </a>
    </li>
    <li class="page-item">
      <a aria-label="Next" class="page-link" id="lastTablePageButton">
        <span aria-hidden="true">
          <%= ion_icon('ios-skipforward') %>
        </span>
        <span class="sr-only">Last</span>
      </a>
    </li>
  </ul>
</nav>
