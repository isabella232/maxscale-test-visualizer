/ Modal window for the selecting tests
#selectTestsModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "selectTestsModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content
      .modal-header
        %h5#selectTestsModalLabel.modal-title Tests
        %button#closeTestsModal.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
      #selectTestsModalBody.modal-body.modal-body-height
        - @test_options.each do |test|
          .form-check
            %input.form-check-input{id: "test_name_check_#{test.id}", type: "checkbox", value: "", name: "test_cases[#{test.id}]", checked: option_selected?((test.id), @selected_filters_values[:test_cases])}
            %label.form-check-label{:for => "test_name_check_#{test.id}"}
              = test.name
      .modal-footer
        %button#selectAllTestsBtn.btn.btn-link{:type => "button"} Select all
        %button#unselectAllTestsBtn.btn.btn-link{:type => "button"} Unselect all
        %button#saveChangesTestsModal.btn.btn-primary{"data-dismiss" => "modal", :type => "button"} Save changes